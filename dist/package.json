{
    "name": "@monitio/nexu",
    "description": "A WIP web TS framework running using a vite-plugin.",
    "version": "0.1.6",
    "private": false,
    "repository": {
        "type": "git",
        "url": "git+https://github.com/monitio/nexu.git"
    },
    "bugs": {
        "url": "https://github.com/monitio/nexu/issues"
    },
    "main": "./src/nexu.js",
    "exports": {
        ".": "./src/nexu.js"
    },
    "bin": {
        "nexu": "./src/cli.js"
    },
    "scripts": {
        "project:build": "tsc && npm run project:copy",
        "project:test": "echo \"Error: use `nexu test` instead.\" && exit 1",
        "project:copy": "node scripts/copy.cjs",
        "cli:start": "npm run project:build && node dist/src/cli.js"
    },
    "keywords": [
        "WIP",
        "web",
        "nexu",
        "website",
        "framework",
        "vite-plugin",
        "vite-plugins",
        "web-framework",
        "work-in-progress"
    ],
    "author": "James-Beans",
    "license": "GPL-3.0-only",
    "dependencies": {
        "chalk": "^5.4.1",
        "child_process": "^1.0.2",
        "commander": "^13.1.0",
        "fs-extra": "^11.3.0",
        "path": "^0.12.7",
        "vite": "^6.2.5"
    },
    "devDependencies": {
        "@types/fs-extra": "^11.0.4",
        "@types/node": "^22.13.10",
        "copyfiles": "^2.4.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.8.2"
    },
    "type": "module"
}
